<h1>Имена</h1>

<table>

<% @names.each do |name| %>
  <tr>
    <td <%= 'style="text-decoration: line-through"' if name.used %>><%=h name.name %></td>
    <td><%= link_to 'Править', edit_name_path(name) %></td>
    <td><%= link_to 'Удалить', name, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Новое имя', new_name_path %>
